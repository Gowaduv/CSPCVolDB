 <h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbv</th>
      <th>Start</th>
      <th>Duration</th>
      <th>Default location</th>
      <th>Recurring Schedule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.abbv %></td>
        <td><%= event.start %></td>
        <td><%= event.duration %></td>
        <td><%= event.default_location %></td>
        <td><%= event.recurring_rule.to_s %></td>
        <td><%= link_to 'Show', event_path(event) %></td>
        <td><% if can?(:edit, event) %><%= link_to 'Edit', edit_event_path(event) %><% end %></td>
        <td><% if can?(:destroy, event) %><%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can?(:create, Event) %><%= link_to 'New Event', new_event_path %><% end %>
