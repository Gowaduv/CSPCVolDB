<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :abbv %><br>
    <%= f.text_field :abbv %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.time_select :start %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :default_location %><br>
    <%= f.number_field :default_location %>
  </div>
  
  <p>
    <%= f.label :recurring_schedule, "Event Recurrence Schedule" %><br/>
    <%= f.select_recurring :recurring_schedule, [ ["No recurring", "{}"]], :allow_blank => true %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
