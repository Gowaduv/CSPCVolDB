# javascript method for 'Approve offer' button
$ ->
  $('body').on "click", '.approve_offer', ->
    offer_id = (this.id.split "_")[2]
    userId = $(this).data().userId
    $.ajax '/offers/'+offer_id,
      type: 'PATCH'
      data: { offer: { accepted: 1, "user_id": userId } }
      dataType: 'script'
    error: (jqXHR, textStatus, errorThrown) ->
      console.log("AJAX Error: #{textStatus}")
    success: (data, textStatus, jqXHR) ->
      console.log("Approved offer")